<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

</head>
<body class="pt-0">

	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="container-fluid">
			@Html.ActionLink("Store", "Index", "Item", null, new { @class = "navbar-brand" })

			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">

					<li class="nav-item">
						@Html.ActionLink("Manage Items", "Index", "Item", null, new { @class = "nav-link active" })
					</li>

					<li class="nav-item">
						@Html.ActionLink("Add Purchase", "Add", "Purchase", null, new { @class = "nav-link active" })
					</li>

					<li class="nav-item">
						@Html.ActionLink("Purchase History", "Index", "Purchase", null, new { @class = "nav-link active" })
					</li>

				</ul>
			</div>
		</div>
	</nav>

