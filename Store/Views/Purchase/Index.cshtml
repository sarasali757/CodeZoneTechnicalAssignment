@model IEnumerable< Purchase>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
	<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<title></title>
	</head>
	<body>

		<div class="mt-3">
			@if (Model != null && Model.Count() > 0)
			{
				<table class="table table-bordered table-hover">
					<thead>
						<tr>
							<td>Item Id</td>
							<td>Item Name</td>
							<td>Quantity</td>
							<td>Purchase Date</td>
							<td></td>
						</tr>
					</thead>
					<tbody>
						@foreach (var purchase in Model)
						{
							<tr>
								<td>@purchase.itemId</td>
								<td>@purchase.item.name</td>
								<td>@purchase.quantity</td>
								<td>@purchase.purchaseDate</td>


								<td>

									<a href="/purchase/Delete/@purchase.id" onclick="return confirm('Are you sure?')"
									   class="btn btn-primary">Delete</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			}
			else
			{
				<h2> No purchased items yet </h2>
				@Html.ActionLink("Add Purchase", "Add", "Purchase", new { }, new { @class = "btn btn-primary" })
			}			@Html.ActionLink("Add Item", "Add", "item", null, new { @class = "btn btn-primary" })

		</div>
	
	</body>
	</html>
